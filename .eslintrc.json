{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["port-check.js", "packages/*", "templates/*"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-underscore-dangle": "off",
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-continue": "warn",
    "camelcase": "off",
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}
